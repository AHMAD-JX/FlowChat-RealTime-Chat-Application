{
  "name": "flowchat",
  "version": "1.0.0",
  "description": "FlowChat - Real-Time Chat Application",
  "main": "index.js",
  "scripts": {
    "install:all": "cd frontend && npm install && cd ../backend && npm install",
    "dev:frontend": "cd frontend && npm run dev",
